<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourstore.app.frontend.controller.PurchasesListViewController"
            prefHeight="600.0" prefWidth="900.0">
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/></padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Purchase Records"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="newPurchaseButton" mnemonicParsing="false" onAction="#handleNewPurchase" text="New Purchase"/>
                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshPurchases" text="Refresh"/>
                <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25.0" prefWidth="25.0"/>
            </HBox>
        </VBox>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
            <Label text="Search:"/>
            <TextField fx:id="searchPurchaseField" promptText="Search by ID, Supplier, Invoice #..." HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="purchasesTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="purchaseIdColumn" prefWidth="70.0" text="ID"/>
                <TableColumn fx:id="supplierNameColumn" prefWidth="180.0" text="Supplier"/>
                <TableColumn fx:id="invoiceNumberColumn" prefWidth="120.0" text="Invoice #"/>
                <TableColumn fx:id="totalAmountColumn" prefWidth="100.0" text="Total Amount"/>
                <TableColumn fx:id="purchaseDateColumn" prefWidth="170.0" text="Purchase Date"/>
                <TableColumn fx:id="recordedByColumn" prefWidth="120.0" text="Recorded By"/>
                <TableColumn fx:id="itemsCountColumn" prefWidth="100.0" text="Items (Count)"/>
            </columns>
            <BorderPane.margin><Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/></BorderPane.margin>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <Label fx:id="statusLabel" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
        </Label>
    </bottom>
</BorderPane>