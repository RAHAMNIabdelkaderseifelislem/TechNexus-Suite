<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourstore.app.frontend.controller.NewSaleViewController"
            prefHeight="700.0" prefWidth="900.0">
    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>
    <top>
        <Label text="Create New Sale" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="18.0"/></font>
            <BorderPane.margin><Insets bottom="10.0"/></BorderPane.margin>
        </Label>
    </top>

    <center>
        <VBox spacing="15.0">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Customer Name (Optional):"/>
                <TextField fx:id="customerNameField" HBox.hgrow="ALWAYS" promptText="Enter customer name"/>
            </HBox>

            <Separator/>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="300.0"/>
                    <ColumnConstraints hgrow="NEVER" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="NEVER"/>
                </columnConstraints>
                <Label text="Select Product:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Quantity:" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <ComboBox fx:id="productComboBox" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="2000.0" promptText="Search or select product"/>
                <Spinner fx:id="quantitySpinner" editable="true" min="1" max="999" initialValue="1" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="100.0">
                    <valueFactory><SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="999" initialValue="1"/></valueFactory>
                </Spinner>
                <Button fx:id="addItemButton" text="Add Item" onAction="#handleAddItemToSale" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>

            <Label text="Items in Current Sale:"/>
            <TableView fx:id="saleItemsTableView" prefHeight="250.0">
                <columns>
                    <TableColumn fx:id="productNameColumn" prefWidth="300.0" text="Product Name"/>
                    <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity"/>
                    <TableColumn fx:id="priceAtSaleColumn" prefWidth="120.0" text="Unit Price"/>
                    <TableColumn fx:id="subtotalColumn" prefWidth="120.0" text="Subtotal"/>
                    <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Label text="Total Amount:">
                    <font><Font name="System Bold" size="16.0"/></font>
                </Label>
                <Label fx:id="totalAmountLabel" text="0.00">
                    <font><Font name="System Bold" size="16.0"/></font>
                </Label>
            </HBox>
            <Label fx:id="statusMessageLabel" style="-fx-text-fill: green;" wrapText="true"/>
            <Label fx:id="errorMessageLabel" style="-fx-text-fill: red;" wrapText="true"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding><Insets top="10.0"/></padding>
            <Button fx:id="completeSaleButton" text="Complete Sale" onAction="#handleCompleteSale" style="-fx-font-size: 14px;" defaultButton="true"/>
            <Button fx:id="cancelSaleButton" text="Cancel" onAction="#handleCancelSale" style="-fx-font-size: 14px;" cancelButton="true"/>
        </HBox>
    </bottom>
</BorderPane>