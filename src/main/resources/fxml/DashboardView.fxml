<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.text.TextFlow?> <!-- For rich text in lists -->
<?import javafx.scene.text.Text?>    <!-- For rich text in lists -->
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.shape.Circle?>

<ScrollPane fitToWidth="true" fitToHeight="true" styleClass="main-content-area" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourstore.app.frontend.controller.DashboardViewController">
    <content>
        <VBox spacing="25.0" alignment="TOP_CENTER" style="-fx-padding: 10;">
            <Label text="Dashboard" styleClass="h1">
                <VBox.margin><Insets bottom="10.0"/></VBox.margin>
            </Label>

            <!-- Metric Cards Row -->
            <HBox fx:id="metricCardsHBox" spacing="20.0" alignment="CENTER">
                <VBox fx:id="todaysSalesCard" styleClass="dashboard-card" prefWidth="240" minHeight="100">
                    <Label text="TODAY'S SALES" styleClass="metric-title"/>
                    <Label fx:id="todaysSalesLabel" text="0.00 DA" styleClass="metric-value"/>
                </VBox>
                <VBox fx:id="productsInStockCard" styleClass="dashboard-card" prefWidth="240" minHeight="100">
                    <Label text="PRODUCTS IN STOCK" styleClass="metric-title"/>
                    <Label fx:id="totalProductsLabel" text="0" styleClass="metric-value"/>
                </VBox>
                <VBox fx:id="pendingRepairsCard" styleClass="dashboard-card" prefWidth="240" minHeight="100">
                    <Label text="PENDING REPAIRS" styleClass="metric-title"/>
                    <Label fx:id="pendingRepairsLabel" text="0" styleClass="metric-value"/>
                </VBox>
                <VBox fx:id="lowStockItemsCard" styleClass="dashboard-card" prefWidth="240" minHeight="100">
                    <Label text="LOW STOCK ITEMS" styleClass="metric-title"/>
                    <Label fx:id="lowStockItemsLabel" text="0" styleClass="metric-value"/>
                </VBox>
            </HBox>

            <Button fx:id="refreshButton" text="Refresh Metrics" onAction="#loadDashboardMetrics" styleClass="button-secondary">
                <VBox.margin><Insets top="0" bottom="15.0"/></VBox.margin>
            </Button>

            <!-- Main Content Grid -->
            <GridPane hgap="20.0" vgap="20.0" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints percentWidth="65.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints percentWidth="35.0" hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="300.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="250.0" vgrow="SOMETIMES"/>
                </rowConstraints>

                <!-- Weekly Sales Chart -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="content-panel" spacing="10">
                    <Label text="Sales Last 7 Days" styleClass="dashboard-section-title"/>
                    <BarChart fx:id="weeklySalesChart" title="" prefHeight="300.0" VBox.vgrow="ALWAYS" animated="true">
                        <xAxis><CategoryAxis fx:id="dayAxis" label="Day"/></xAxis>
                        <yAxis><NumberAxis fx:id="salesAmountAxis" label="Sales Amount (DA)" side="LEFT" minorTickVisible="false"/></yAxis>
                    </BarChart>
                </VBox>

                <!-- Latest Repair Jobs -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="content-panel" spacing="10">
                    <Label text="Latest Repair Jobs" styleClass="dashboard-section-title"/>
                    <TableView fx:id="latestRepairsTableView" prefHeight="250.0" VBox.vgrow="ALWAYS"> <!-- Adjust prefHeight as needed -->
                        <columns>
                            <TableColumn fx:id="latestRepairIdColumn" text="ID" prefWidth="60" styleClass="centered-column"/>
                            <TableColumn fx:id="latestRepairCustomerColumn" text="Customer" prefWidth="120"/>
                            <TableColumn fx:id="latestRepairItemColumn" text="Item" prefWidth="150"/>
                            <TableColumn fx:id="latestRepairStatusColumn" text="Status" prefWidth="120"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                    <Hyperlink text="View All Repairs" onAction="#navigateToViewRepairs" style="-fx-font-size: 12px;"/>
                </VBox>

                <!-- Recent Sales -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="content-panel" spacing="10">
                     <Label text="Recent Sales" styleClass="dashboard-section-title"/>
                     <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                        <VBox fx:id="recentSalesVBox" spacing="8.0" style="-fx-padding: 5px 0px;"/>
                     </ScrollPane>
                     <Hyperlink text="View All Sales" onAction="#navigateToViewSales" style="-fx-font-size: 12px;"/>
                </VBox>

                <!-- Low Stock Alerts -->
                 <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="content-panel" spacing="10">
                     <Label text="Low Stock Alerts" styleClass="dashboard-section-title"/>
                     <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                        <VBox fx:id="lowStockAlertsVBox" spacing="8.0" style="-fx-padding: 5px 0px;"/>
                     </ScrollPane>
                     <Hyperlink text="View All Products / Order Stock" onAction="#navigateToProducts" style="-fx-font-size: 12px;"/>
                </VBox>
            </GridPane>
        </VBox>
    </content>
</ScrollPane>