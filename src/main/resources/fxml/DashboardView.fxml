<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yourstore.app.frontend.controller.DashboardViewController"
      spacing="20.0" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Store Dashboard">
        <font><Font name="System Bold" size="24.0"/></font>
    </Label>
    <GridPane hgap="20.0" vgap="15.0" alignment="CENTER">
        <padding><Insets top="20.0"/></padding>
        <Label text="Total Products:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 16px;"/>
        <Label fx:id="totalProductsLabel" text="Loading..." GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Total Sales Count:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 16px;"/>
        <Label fx:id="totalSalesCountLabel" text="Loading..." GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Total Sales Revenue:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 16px;"/>
        <Label fx:id="totalRevenueLabel" text="Loading..." GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    </GridPane>
    <Button fx:id="refreshButton" text="Refresh Metrics" onAction="#loadDashboardMetrics"/>
</VBox>