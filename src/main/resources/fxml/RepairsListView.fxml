<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourstore.app.frontend.controller.RepairsListViewController"
            prefHeight="700.0" prefWidth="1100.0">
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="homeButton" text="Home" onAction="#handleGoHome"/> <!-- NEW BUTTON -->
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Repairs"/>
            </HBox> 
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                <Label text="Search:"/>
                <TextField fx:id="searchRepairField" promptText="Search by ID, Customer, Item, Status..." HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="newRepairButton" text="Log New Repair Job" onAction="#handleNewRepairJob"/>
                <Button fx:id="editRepairButton" text="View/Edit Selected" onAction="#handleEditRepairJob" disable="true"/>
                <Button fx:id="refreshButton" text="Refresh List" onAction="#handleRefresh"/>
                <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25.0" prefWidth="25.0"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="repairsTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="repairIdColumn" prefWidth="60.0" text="ID"/>
                <TableColumn fx:id="customerNameColumn" prefWidth="150.0" text="Customer"/>
                <TableColumn fx:id="itemTypeColumn" prefWidth="100.0" text="Item Type"/>
                <TableColumn fx:id="itemBrandModelColumn" prefWidth="150.0" text="Brand/Model"/>
                <TableColumn fx:id="reportedIssueColumn" prefWidth="200.0" text="Reported Issue"/>
                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status"/>
                <TableColumn fx:id="assignedToColumn" prefWidth="120.0" text="Assigned To"/>
                <TableColumn fx:id="dateReceivedColumn" prefWidth="140.0" text="Date Received"/>
                <TableColumn fx:id="estCompletionColumn" prefWidth="120.0" text="Est. Completion"/>
            </columns>
            <BorderPane.margin><Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/></BorderPane.margin>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <Label fx:id="statusLabel" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
        </Label>
    </bottom>
</BorderPane>